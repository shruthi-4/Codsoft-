#include <iostream>

using namespace std;

int main()
{
  char c;
  float a,b;
  for(int i=1;i<10;i++){
  cout<<"Enter operator:+,-,*,/"<<endl;
  cin>>c;
  cout<<"Enter the two numbers:"<<endl;
  cin>>a>>b;
  switch(c){
      case '+': 
      cout<<a<<"+"<<b<<"="<<a+b;
      break;
       case '-': 
      cout<<a<<"-"<<b<<"="<<a-b;
      break;
       case '*': 
      cout<<a<<"*"<<b<<"="<<a*b;
      break;
       case '/': 
      cout<<a<<"/"<<b<<"="<<a/b;
      break;
      default:
      cout<<"Error!operator not found"<<endl;
      break;
  }}
    return 0;
}
